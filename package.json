{
  "name": "course_app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma:generate": "cd apps/express_app && npx prisma generate && cd ../..",
    "prisma:migrate": "cd apps/express_app && npx prisma migrate deploy && cd ../..",
    "start-user-app": "cd ./apps/user-app && pnpm run start",
    "start-admin-app": "cd ./apps/admin-app && pnpm run start",
    "start-express-app": "cd ./apps/express_app && pnpm run start"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
